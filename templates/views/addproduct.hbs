    <section>
        <div class="container" style="position:relative; margin-top:-85px; margin-left: -50px;">
		<div class="login-container-wrapper clearfix">
			<div class="logo">
				<i class="fas fa-sign-in-alt"></i>
			</div>
			<div class="welcome"><strong>Hey,</strong> Add the product below</div>

			<form action="/addproduct" method="POST" enctype="multipart/form-data" class="form-horizontal login-form" id="prodForm">
				<div class="form-group relative">
					<input type="text" name="name" placeholder="Enter the product name" class="form-control form-control-lg" required/>
					<i class="fa fa-user"></i>
				</div>
				<div class="form-group relative">
					<input type="number" name="activetime" placeholder="Active time (in hours)" class="form-control form-control-lg" onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                  title="Numbers only" required/>
					<i class="fas fa-stopwatch"></i>
				</div>
        <div class="form-group relative">
          <textarea placeholder="Product Description" name="description" form="prodForm"  rows="3" class = "form-control" required></textarea>
          <i class="fas fa-comment"></i>
				</div>
				<div class="form-group relative">
					<input type="number" name="startingbid" placeholder="Enter desired starting bid in â‚¹" class="form-control form-control-lg" required />
					<i class="fas fa-rupee-sign"></i>
				</div>
				
				<div class="form-outline mb-4">
					<div class="welcome">Upload 4 product images</div>
					<input type="file" id ="img" name="productimages" multiple accept="image/*"  onchange="Filevalidation()" required/>
          <div style="color: #D8000C; margin: 10px 0px; padding:12px;">
          <p id="msg" ></p>
          </div>
				</div>
        <script>
          Filevalidation = () => {
        const fi = document.getElementById('img');
        // Check if any file is selected.
        if (fi.files.length == 4) {
            for (const i = 0; i <= fi.files.length - 1; i++) {
                const fsize = fi.files.item(i).size;
                const file = Math.round((fsize / 1024));
                // The size of the file.
                if (file >= 4096) {
                    document.getElementById('msg').innerHTML= "Files too Big, please select files less than 4mb";
                    document.getElementById('sub').disabled = true;
                }
                else
                {
                   document.getElementById('msg').innerHTML= '';
                  document.getElementById('sub').disabled = false;
                }
            }
          }
          else{
             document.getElementById('msg').innerHTML= "Please select 4 images";
             document.getElementById('sub').disabled = true;
          }
        }

        </script>
			  <div class="form-group">
			    <input type="submit" value="Add Product" disabled="disabled" id="sub" class="btn btn-primary btn-lg btn-block signin-btn text-uppercase mb-4">
			  </div>
	
			</form>
		</div>
	</div>




